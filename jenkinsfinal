pipeline {
  agent any
  stages {
    stage('Cleanup') {
      steps {
        deleteDir()
      }
    }

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/Monuchauhan80/Password-encription-and-decription.git'
      }
    }

    stage('Build & Test') {
      steps {
        sh 'mvn -B clean test package'
      }
    }

    stage('Archive') {
      steps {
        archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
      }
    }
  }

  post {
    always {
      junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
    }
  }
}
